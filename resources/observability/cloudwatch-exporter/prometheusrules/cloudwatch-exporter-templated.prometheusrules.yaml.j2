---
$schema: /openshift/prometheus-rule-1.yml
apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata:
  labels:
    prometheus: app-sre
    role: alert-rules
  name: cloudwatch-exporter-templated
spec:
  groups:
  - name: cloudwatch-exporter-templated.rules
    rules:
    {{%- for instance in cloudwatch_exporter_instances %}}
    - alert: CloudWatchExporterTargetDown
      labels:
        service: app-sre-observability
        severity: critical
      expr: absent(up{job="{{{ instance }}}"}==1)
      for: 5m
      annotations:
        dashboard: https://grafana.app-sre.devshift.net
        html_url: https://gitlab.cee.redhat.com/service/app-interface/blob/master/resources/observability/cloudwatch-exporter/prometheusrules/cloudwatch-exporter.prometheusrules.yaml
        message: Cloudwatch exporter {{{ instance }}} has been down for 5m+.
        runbook: https://github.com/rhobs/configuration/tree/main/docs/sop
    {{%- endfor %}}

    {{%- for namespace in query('/queries/namespace-terraform-app-jira.graphql') %}}
    {{%- if (namespace.managedExternalResources and namespace.externalResources) %}}
    {{%- for er in namespace.externalResources %}}
    {{%- if (er.provider == 'aws' and er.provisioner.name in accounts_with_cloudwatch_exporter) %}}
    {{%- for tfr in er.resources %}}
    {{%- if tfr.provider == 'rds' %}}
    - alert: RDSPredictOutOfBurstBalance
      labels:
        service: app-sre-observability
        app: {{{ namespace.app.name }}}
        {{%- if ((namespace.app.onboardingStatus != 'OnBoarded') or ('stage' in namespace.name) or ('staging' in namespace.name) or ('integration' in namespace.name)) %}}
        severity: medium
        {{%- else %}}
        severity: high
        {{%- endif %}}
        jiralert: {{{ namespace.app.escalationPolicy.channels.jiraBoard[0].name }}}
      expr: predict_linear(aws_rds_burst_balance_average{dbinstance_identifier="{{{ tfr.identifier }}}"}[15m], 3600 * 9) <= 0
      for: 1h
      annotations:
        message: "DB instance '{{{ er.provisioner.name }}}/{{ $labels.dbinstance_identifier }}' storage will be out of burst balance in 8 hours"
        runbook: "https://gitlab.cee.redhat.com/service/app-interface/tree/master/docs/app-sre/sop/rds-burst-balance.md"
    {{%- endif %}}
    {{%- endfor %}}
    {{%- endif %}}
    {{%- endfor %}}
    {{%- endif %}}
    {{%- endfor %}}
