{{% set q_settings_alerting_services = query('/queries/app-interface-alerting-services.graphql') %}}
{{% set alerting_services = q_settings_alerting_services[0].alertingServices %}}
---
$schema: /openshift/prometheus-rule-1.yml
apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata:
  labels:
    prometheus: app-sre
    role: alert-rules
  name: prometheus-app-sre
spec:
  groups:
  - name: prometheus-app-sre.rules
    rules:
    {{%- for cluster in query('/queries/cluster-namespace-onboarding-status.graphql', name=resource.namespace.cluster.name) %}}
    {{%- for namespace in cluster.namespaces | sort(attribute='name') %}}
    {{% set labels = namespace.app.labels | json_to_dict %}}
    - alert: PrometheusTargetFlapping
      labels:
        {{%- if "service" in labels and labels["service"] in alerting_services %}}
        service: {{{ labels["service"] }}}
        {{%- else %}}
        service: app-sre-observability
        {{%- endif %}}
        {{%- if ((namespace.app.onboardingStatus != 'OnBoarded') or ('stage' in namespace.name) or ('staging' in namespace.name) or ('integration' in namespace.name)) %}}
        severity: medium
        {{%- else %}}
        severity: high
        {{%- endif %}}
      expr: changes(up{namespace="{{{ namespace.name }}}"}[15m]) > 4 # 2 state changes in 15 minutes
      for: 1m
      annotations:
        message: "Target {{ $labels.job }}/{{ $labels.instance }} status is flapping"
        runbook: "https://gitlab.cee.redhat.com/service/app-interface/-/blob/master/docs/app-sre/sop/prometheus/prometheus-target-flapping.md"
    - alert: KubeStatefulSetReplicasMismatch
      labels:
        {{%- if "service" in labels and labels["service"] in alerting_services %}}
        service: {{{ labels["service"] }}}
        {{%- else %}}
        service: app-sre-observability
        {{%- endif %}}
        {{%- if ((namespace.app.onboardingStatus != 'OnBoarded') or ('stage' in namespace.name) or ('staging' in namespace.name) or ('integration' in namespace.name)) %}}
        severity: medium
        {{%- else %}}
        severity: high
        {{%- endif %}}
      expr: |
        (
          kube_statefulset_status_replicas_ready{namespace="{{{ namespace.name }}}"}
            !=
          kube_statefulset_status_replicas{namespace="{{{ namespace.name }}}"}
        ) and (
          changes(kube_statefulset_status_replicas_updated{namespace="{{{ namespace.name }}}"}[10m])
            ==
          0
        )
      for: 15m
      annotations:
        message: "StatefulSet {{ $labels.namespace }}/{{ $labels.statefulset }} has not matched the expected number of replicas for longer than 15 minutes."
        runbook: "https://gitlab.cee.redhat.com/service/app-interface/-/blob/master/docs/app-sre/sop/prometheus/TODO.md"
    {{%- endfor %}}
    {{%- endfor %}}
