apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-devshiftnet-dns
spec:
  acme:
    # You must replace this email address with your own.
    # Let's Encrypt will use this to contact you about expiring
    # certificates, and issues related to your account.
    email: sd-app-sre@redhat.com
    server: https://acme-v02.api.letsencrypt.org/directory
    privateKeySecretRef:
      name: devshiftnet-account-key
    solvers:
    - selector:
        dnsZones:
          - "devshift.net"
      dns01:
        cnameStrategy: None
        route53:
          region: global
          accessKeyID: {{{ vault('app-sre/integrations-output/terraform-resources/{{cluster}}/openshift-cert-manager/{{secret}}', 'aws_access_key_id') }}}
          hostedZoneID: {{{ hosted_zone_id }}}
          secretAccessKeySecretRef:
            name: aws-secret
            key: {{{ secret }}}
