---
apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: appstudio-argocd-metrics-{{ env }}
  labels:
    prometheus: app-sre
spec:
  endpoints:
    - bearerTokenSecret:
        key: ''
      port: metrics
  namespaceSelector:
    matchNames:
      - {{ namespace }}
  selector:
    matchLabels:
      app.kubernetes.io/name: argocd-metrics
