---
$schema: /openshift/prometheus-rule-1.yml
apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata:
  labels:
    prometheus: app-sre
    role: alert-rules
  name: rds-deprecated-major-versions
spec:
  groups:
  # Do not update this check without first updating the expression in rds-deprecated-major-versions-test.prometheusrules.yaml
  # and ensuring that the tests still pass.
  - name: rds-deprecated-major-version-checks
    rules:
    {{%- for namespace in query('/queries/namespace-terraform-app-jira.graphql') %}}
    {{%- if (namespace.managedExternalResources and namespace.externalResources) %}}
    {{%- for er in namespace.externalResources %}}
    {{%- if (er.provider == 'aws' and er.provisioner.name in accounts_with_aws_resource_exporter) %}}
    {{%- for tfr in er.resources %}}
    {{%- if tfr.provider == 'rds' %}}
    - alert: RDSDeprecatedMajorVersionCheck
      annotations:
        message: "The {{{ tfr.identifier }}} RDS instance, in AWS account {{{ er.provisioner.name }}}, is running a deprecated or soon-to-be deprecated major version. Please upgrade your database to use an approved version. See the link_url of this alert for more information about the deadline and the runbook for more information about upgrading the database."
        link_url: "https://gitlab.cee.redhat.com/service/app-interface/-/blob/master/docs/aws/maintenance/rds-major-version-deprecation.md"
        runbook: "https://gitlab.cee.redhat.com/service/app-interface#rds-major-version-upgrades"
      expr: |
         last_over_time(aws_resources_exporter_rds_engineversion{dbinstance_identifier=~"{{{ tfr.identifier }}}",engine="postgres", engine_version=~"^(10|11|)\\..*"}[1h])
      for: 10m
      labels:
        app: {{{ namespace.app.name }}}
        service: rds-deprecated-major-versions
        severity: high
        {{%- if namespace.app.escalationPolicy.channels.jiraComponent %}}
        jiralert: {{{ namespace.app.escalationPolicy.channels.jiraBoard[0].name }}}/{{{ namespace.app.escalationPolicy.channels.jiraComponent }}}
        {{%- else %}}
        jiralert: {{{ namespace.app.escalationPolicy.channels.jiraBoard[0].name }}}
        {{%- endif %}}
    {{%- endif %}}
    {{%- endfor %}}
    {{%- endif %}}
    {{%- endfor %}}
    {{%- endif %}}
    {{%- endfor %}}
