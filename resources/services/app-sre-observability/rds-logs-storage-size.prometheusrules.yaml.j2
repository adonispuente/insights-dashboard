---
$schema: /openshift/prometheus-rule-1.yml
apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata:
  labels:
    prometheus: app-sre
    role: alert-rules
  name: rds-logs-storage-size
spec:
  groups:
  - name: rds-logs-storage-size
    rules:
    {{%- for namespace in query('/queries/namespace-terraform-app-jira.graphql') %}}
    {{%- if (namespace.managedExternalResources and namespace.externalResources) %}}
    {{%- for er in namespace.externalResources %}}
    {{%- if (er.provider == 'aws' and er.provisioner.name in accounts_with_aws_resource_exporter) %}}
    {{%- for tfr in er.resources %}}
    {{%- if tfr.provider == 'rds' %}}
    - alert: RDSLogsStorageSize
      annotations:
        runbook: "https://gitlab.cee.redhat.com/service/app-interface/-/blob/master/docs/app-sre/sop/rds-logs-storage-size.md"
        message: "Log files of {{{ tfr.identifier }}} RDS instance, in AWS account {{{ er.provisioner.name }}} are using more than 20% of the allocated storage."
      expr: 'round(aws_resources_exporter_rds_logsstorage_size_bytes{dbinstance_identifier="{{{ tfr.identifier }}}"} / aws_resources_exporter_rds_allocatedstorage{dbinstance_identifier="{{{ tfr.identifier }}}"} *100, 0.01) > 20'
      for: 10m
      labels:
        app: {{{ namespace.app.name }}}
        service: app-sre-observability
        severity: medium
        {{%- if namespace.app.escalationPolicy.channels.jiraComponent %}}
        jiralert: {{{ namespace.app.escalationPolicy.channels.jiraBoard[0].name }}}/{{{ namespace.app.escalationPolicy.channels.jiraComponent }}}
        {{%- else %}}
        jiralert: {{{ namespace.app.escalationPolicy.channels.jiraBoard[0].name }}}
        {{%- endif %}}
    {{%- endif %}}
    {{%- endfor %}}
    {{%- endif %}}
    {{%- endfor %}}
    {{%- endif %}}
    {{%- endfor %}}
