{%- set cluster = query('/queries/dynatrace/cluster-with-namespaces.graphql', name=resource.namespace.cluster.name)[0] -%}
{%- set environmentUrl = cluster.dynatraceEnvironment.environmentUrl -%}
---
# DynaKube for log ingestion.
# DynaKube is the monitoring configuration object.
# The Dynatrace Operator detects this object
# and reconciles monitoring agents accordingly.
# Note, that a cluster can have multiple DynaKube
# objects, i.e., multiple ActiveGates and OneAgent
# Daemonsets each with different configurations.
# This file is aligned with https://gitlab.cee.redhat.com/service/dynatrace-config
apiVersion: dynatrace.com/v1beta1
kind: DynaKube
metadata:
  # Note: this name seems to be used to tag dt.kubernetes.cluster.name
  name: {{ cluster.name }}
  namespace: dynatrace
  annotations:
    feature.dynatrace.com/automatic-kubernetes-api-monitoring: "true"
spec:
  apiUrl: {{ environmentUrl }}/api
  skipCertCheck: false
  tokens: dynatrace-tokens
  oneAgent:
    classicFullStack:
      args:
      # aligned with https://gitlab.cee.redhat.com/service/dynatrace-config/-/blob/main/resources/dynatrace-dynakube/template.yaml
      # https://www.dynatrace.com/support/help/setup-and-configuration/dynatrace-oneagent/oneagent-configuration-via-command-line-interface
      - --set-infra-only=true
      - --set-host-group={{ cluster.name }}
      - --set-host-tag=redhat.cluster.owner=app-sre
      - --set-host-tag=redhat.cluster.name={{ cluster.name }}
      # Note: these tags is built-in by dynatrace
      - --set-host-tag=k8s.cluster.name={{ cluster.name }}
      - --set-host-tag=dt.kubernetes.cluster.name={{ cluster.name }}
      tolerations:
        - effect: NoSchedule
          key: node-role.kubernetes.io/master
          operator: Exists
        - effect: NoSchedule
          key: node-role.kubernetes.io/infra
          operator: Exists
        - effect: NoSchedule
          key: node-role.kubernetes.io/control-plane
          operator: Exists
      autoUpdate: true
      oneAgentResources:
        # These required resources might differ heavily based on log volume. We have to keep an eye on this.
        # TODO: alert for throttling and OOM of OneAgents
        requests:
          # These values were observed in app-sre-stage-01
          cpu: {{ ONEAGENT_CPU_REQUEST | default("200m") }}
          memory: {{ ONEAGENT_MEM_REQUEST | default("768Mi") }}
        limits:
          # https://github.com/Dynatrace/dynatrace-operator/blob/e81873106c48035f824ec8259e1c46c2d32a150d/assets/samples/classicFullStack.yaml#L95
          cpu: {{ ONEAGENT_CPU_LIMIT | default("300m") }}
          # Note: Gi is not supported
          memory: {{ ONEAGENT_MEM_LIMIT | default("1536Mi") }}
  activeGate:
    capabilities:
      # All available capabilities:
      # - routing
      # - kubernetes-monitoring
      # - dynatrace-api
      # - metrics-ingest
      - routing
      - kubernetes-monitoring
      - dynatrace-api
      # Warning: metrics-ingest feature is in PREVIEW.
      # Warning: PREVIEW features are NOT production ready and you may run into bugs.
      # - metrics-ingest
    replicas: 1
    tolerations:
      - effect: NoSchedule
        key: node-role.kubernetes.io/infra
        operator: Exists          
    nodeSelector:
      node-role.kubernetes.io/infra: ""
    resources:
      requests:
        cpu: {{ ACTIVEGATE_CPU_REQUEST | default("500m") }}
        memory: {{ ACTIVEGATE_MEM_REQUEST | default("512Mi") }}
      limits:
        cpu: {{ ACTIVEGATE_CPU_LIMIT | default("1000m") }}
        # Note: Gi is not supported
        memory: {{ ACTIVEGATE_MEM_LIMIT | default("1536Mi") }}
