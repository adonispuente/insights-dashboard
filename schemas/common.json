{
  "$schema": "http://json-schema.org/draft-04/schema",
  "version": "0.0.1",
  "type": "object",
  "definitions": {
    "labels": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "identifier": {
      "type": "string",
      "pattern": "^[A-Za-z0-9][A-Za-z0-9-_]{0,30}[A-Za-z0-9]$"
    },
    "semanticVersion": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(-(0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(\\.(0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*)?(\\+[0-9a-zA-Z-]+(\\.[0-9a-zA-Z-]+)*)?$"
    },
    "stableIndexList": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "state": {
            "type": "string",
            "enum": [
              "deleted",
              "active"
            ],
            "default": "active",
            "description": "List items must never be removed. To signal that a list item should be deleted the state should be set to deleted and downstream integrations will remove the corresponding object if it exists."
          }
        }
      }
    },
    "stableIdentifierList": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/definitions/identifier",
            "description": "The stable identifier that will always be used to talk about this list instance. If the identifier changes, that will be interpreted as a deletion and insertion."
          }
        },
        "required": [
          "id"
        ]
      }
    },
    "serviceLevel": {
      "type": "number",
      "minimum": 90,
      "maximum": 100,
      "exclusiveMaximum": true
    },
    "crossref": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "$ref": {
              "type": "string"
            }
          },
          "required": [
            "$ref"
          ],
          "additionalProperties": false
        },
        {
          "properties": {
            "$jsonpathref": {
              "type": "string"
            }
          },
          "required": [
            "$jsonpathref"
          ],
          "additionalProperties": false
        }
      ]
    }
  }
}
