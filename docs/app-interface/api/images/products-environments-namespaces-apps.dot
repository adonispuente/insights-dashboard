digraph graph_name {
    rankdir="LR"
    newrank="true"

    node[
        style = "solid,filled",
        shape = "box"
    ];

    subgraph cluster_apps {
        // style=invis
        label="Apps"
        node[ fillcolor="#FFCD66" ]
        "OCM"
        "Cincinnati"
    }

    // ns
    subgraph cluster_ns {
        // style=invis
        label="Namespaces"
        node [ fillcolor = "#FE754A" ]
        "ocm-stage"
        "ocm-prod"
        "cincinnati-stage"
        "cincinnati-prod"
    }

    // envs
    subgraph cluster_envs {
        // style=invis
        label="Environments"
        node [fillcolor = "#b2ebf2"]
        "OSDv4-stage"
        "OSDv4-prod"
    }

    subgraph cluster_products {
        // style=invis
        label="Products"
        node [fillcolor = "#00bcd4"]
        "OSDv4"
    }


    // graph
    "OCM" -> "ocm-stage" [dir=back]
    "OCM" -> "ocm-prod" [dir=back]
    "Cincinnati" -> "cincinnati-stage" [dir=back]
    "Cincinnati" -> "cincinnati-prod" [dir=back]

    "ocm-stage" -> "OSDv4-stage"
    "ocm-prod" -> "OSDv4-prod"

    "cincinnati-stage" -> "OSDv4-stage"
    "cincinnati-prod" -> "OSDv4-prod"

    "OSDv4-stage" -> "OSDv4"
    "OSDv4-prod" -> "OSDv4"
}
